<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:shrinkColumns="*"
    android:focusable="true"
    tools:context=".StartRecording">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0D6273"
        android:id="@+id/journeydetails"
        android:text="Journey Details"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/mode"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/mode"
        android:padding="16dp"
        android:text="Journey Mode"
        android:layout_marginTop="39dp"
        android:layout_gravity="center"
         />


    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center"
        android:text="Journey Duration"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="Journey Distance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Recording"
        android:id="@+id/button1"
        android:background="@drawable/yellowbutton"
        android:textSize="15sp"
        android:textColor="#21BEDE"
        android:layout_gravity="center"
        android:padding="16dp"
        android:layout_marginTop="39dp"
        />

</LinearLayout>